@model SistemaMatricula.Models.ViewModel.EstoqueViewModel
@{
    ViewData["Title"] = "Detalhar";
}

<h2>@ViewData["Title"]</h2>

<h4>Estoque</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @Html.HiddenFor(x => x.EstoqueId)
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">

            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.Nome, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.Preco, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.Preco, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.Preco, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.Quantidade, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.Quantidade, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
        </div>
        
        <div class="form-group">

            @Html.LabelFor(model => model.NomeSetor, htmlAttributes: new { @class = "control-label" })

            @Html.DisplayFor(model => model.NomeSetor, new { htmlAttributes = new { @class = "control-label" } })
            @Html.ValidationMessageFor(model => model.NomeSetor, "", new { @class = "text-danger" })
        </div>



        <div class="form-group">
            @Html.ActionLink("Editar", "Edit", "Estoques", new { @id = Model.EstoqueId })
        </div>
        @Html.ActionLink("Voltar", "Index", "Estoques", new { htmlAttributes = new { @class = "btn btn-primary" } })

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}