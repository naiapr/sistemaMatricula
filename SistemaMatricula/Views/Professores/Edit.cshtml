@model SistemaMatricula.Models.ViewModel.ProfessorViewModel
@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Professor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Professor.Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Professor.Nome" class="control-label"></label>
                <input asp-for="Professor.Nome" class="form-control" />
                <span asp-validation-for="Professor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Professor.ModalidadeId" class="control-label"></label>
                <select asp-for="Professor.ModalidadeId" asp-items="@(new SelectList(Model.Modalidades,"Id","Nome"))" class="form-control"></select>
            </div>




            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
