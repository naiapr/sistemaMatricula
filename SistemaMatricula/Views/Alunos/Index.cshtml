@model IEnumerable<SistemaMatricula.Models.ViewModel.AlunoViewModel>

@{
    ViewData["Title"] = "Aluno";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo Cadastro</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">


            <th>
                @Html.DisplayNameFor(model => model.Aluno.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno.Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aluno.Altura)
            </th>
            



            <th>
                @Html.DisplayNameFor(model => model.NomeModalidade)
            </th>
            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeAluno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlunoIMC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeModalidade)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.AlunoId">Editar</a>
                <a asp-action="Details" asp-route-id="@item.AlunoId">Detalhar</a>
                <a asp-action="Delete" asp-route-id="@item.AlunoId">Deletar</a>
            </td>
        </tr>

        }
    </tbody>

</table>