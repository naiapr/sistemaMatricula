@model SistemaMatricula.Models.ViewModel.AlunoViewModel
@{
    ViewData["Title"] = "Cadastrar";
}

<h2>@ViewData["Title"]</h2>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">

                @Html.LabelFor(model => model.NomeAluno, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.NomeAluno, new { htmlAttributes = new { @class = "control-label" } })
                @Html.ValidationMessageFor(model => model.NomeAluno, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "control-label" } })
                @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">

                @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "control-label" } })
                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                @Html.LabelFor(model => model.Altura, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.Altura, new { htmlAttributes = new { @class = "control-label" } })
                @Html.ValidationMessageFor(model => model.Altura, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                @Html.LabelFor(model => model.IDModalidade, htmlAttributes: new { @class = "control-label" })

                @Html.DropDownListFor(model => model.IDModalidade, new SelectList(ViewBag.IDModalidade, "Id", "Nome"), htmlAttributes: new { @class = "control-label" })
                @Html.ValidationMessageFor(model => model.IDModalidade, "", new { @class = "text-danger" })
            </div>

          

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}